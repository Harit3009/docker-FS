generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id @id @default(uuid())
  name String 
  email String @unique
  profilePic String?
  googleId String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  googleAccessToken String? @db.Text
  googleRefreshToken String? @db.Text
}